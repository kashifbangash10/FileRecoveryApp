<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ScanRecoveryFragment">

    <ImageView
        android:id="@+id/backarrow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/arrowleft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recovertxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="All"
        android:textColor="#040031"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backarrow_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/elipse1"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/elipse1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backarrow_btn" />

    <TextView
        android:id="@+id/txtselect"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto"
        android:text="Select all"
        android:textColor="#040031"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/elipse1"
        app:layout_constraintTop_toBottomOf="@+id/recovertxt" />

    <ImageView
        android:id="@+id/elipse2"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/elipse1"
        app:layout_constraintTop_toBottomOf="@id/elipse1"
        app:layout_constraintStart_toStartOf="parent"
/>

    <TextView
        android:id="@+id/txtselect2"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto"
        android:text="Yesturday"
        android:textColor="#040031"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/elipse1"
        app:layout_constraintTop_toBottomOf="@+id/txtselect" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/serchicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtselect"
        app:layout_constraintTop_toBottomOf="@+id/recovertxt" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtselect2"
        app:layout_constraintVertical_bias="0.058" />


</androidx.constraintlayout.widget.ConstraintLayout>